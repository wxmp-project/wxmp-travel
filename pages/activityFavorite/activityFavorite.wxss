/* pages/activityFavorite/activityFavorite.wxss */
.container {
  position: relative;
}
.list {
  padding: 0 32rpx 32rpx;
  overflow-y: scroll;
}
.head {
  font-size: 30rpx;
  color: #111111;
  padding: 0 32rpx;
  height: 90rpx;
  background: #fff;
  margin: 20rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-weight: 300;
}
.head-right {
  color: #111;
  font-size: 30rpx;
  font-weight: 300;
  display: flex;
  align-items: center;
}
.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}
.arrow-icon image {
  width: 100%;
  height: 100%;
  display: block;
}
.item {
  background: #fff;
  border-radius: 16rpx;
  border: 2rpx solid #eef0f2;
  box-shadow: 0px 4rpx 8rpx rgba(0, 0, 0, 0.04);
  padding: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}
.item-left {
  margin-right: 30rpx;
}
.footer {
  position: fixed;
  bottom: 0;
  z-index: 50;
  height: auto;
  width: 100%;
}
.footer-btn {
  width: 100% !important;
  height: 84rpx;
  background: #007af5;
  border-radius: 4rpx;
  font-size: 30rpx;
  color: #fff;
  font-weight: 200;
}
