/* pages/mine/mine.wxss */
.container {
  width: 100%;
  position: relative;
  min-height: 100vh;
}
.ml5 {
  margin-left: 10rpx;
}
.box {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 99;
}
.mine-header {
  width: 100%;
  height: 420rpx;
  text-align: center;
  background: linear-gradient(#5396b0 0%, #316b9c 30%, #1c446e 60%, #1c446e 100%);
}
.mine-header-img {
  width: 100%;
  height: 132rpx;
  padding-top: 120rpx;
}
.mine-header-img image {
  width: 132rpx;
  height: 132rpx;
  display: block;
  margin: 0 auto;
  border-radius: 66rpx;
}
.mine-header-name {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 16rpx;
  color: #fff;
}
.mine-header-nickname {
  font-size: 36rpx;
  color: #fff;
  line-height: 48rpx;
  display: block;
  height: 48rpx;
}
.mine-header-edit {
  margin-left: 20rpx;
  width: 32rpx;
  height: 32rpx;
  display: block;
}
.mine-content {
  border-radius: 20rpx 20rpx 0 0;
  background: #fff;
  padding: 0 32rpx 0;
  height: 60vh;
  position: relative;
}
.mine-content-item {
  color: #111111;
  font-size: 32rpx;
  height: 96rpx;
  font-weight: 200;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.content-item-label {
  display: block;
}
.mine-content-item::after {
  background: #eaeaea;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  content: '';
  height: 1px;
  background: #dbdbdb;
  transform: scaleY(0.5); /*缩放*/
}
.mine-content-item:last-child::after {
  background: #fff;
}
.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}
.arrow-icon image {
  width: 100%;
  height: 100%;
  display: block;
}
.mine-content-btn {
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
}
.btn-gray {
  width: 100% !important;
  height: 84rpx;
}
.remark-view {
  height: 100vh;
  width: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  position: fixed;
  top: 0;
}
.remark-view-background {
  background: white;
  height: 30%;
  margin: 60% 48rpx 0;
  border-radius: 8rpx;
}
.remark-view-top {
  padding: 20rpx 32rpx 0;
  font-size: 36rpx;
  color: #0b1d32;
  text-align: center;
  font-weight: bold;
}
.remark-view-middle {
  margin: 40rpx 32rpx 0;
  height: 50%;
  border-radius: 8px;
  font-size: 32rpx;
  font-weight: 200;
}
.remark-view-middle .item {
  margin-bottom: 10rpx;
  display: flex;
  justify-content: space-between;
  justify-items: center;
}
.remark-view-blank {
  height: 1rpx;
  margin-top: 65rpx;
  background: #dfe2e4;
}
.remark-view-bottom {
  height: 80rpx;
  border-radius: 8px;
  font-size: 18px;
  width: 100%;
  border-top: 2rpx solid #f4f4f4;
}
.remark-view-cancel {
  line-height: 80rpx;
  color: #0b1d32;
  font-weight: 200;
  font-size: 30rpx;
  text-align: center;
}
.remark-view-confim {
  width: 50%;
  line-height: 80rpx;
  color: #0a73f5;
  font-weight: 200;
  font-size: 30rpx;
}
