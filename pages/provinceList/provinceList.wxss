/* pages/provinceList/provinceList.wxss */
.container {
  position: relative;
}
/* 滚动列表 */
.box {
  margin-top: 0;
  flex: 1;
}
.scroll {
  height: 100%;
}
.scroll-item {
  height: 92rpx;
  padding: 0 32rpx;
  line-height: 92rpx;
  background: #fff;
}
.scroll-letter {
  height: 44rpx;
  background: #f5f5f5;
  line-height: 44rpx;
  font-size: 26rpx;
  text-align: left;
  padding-left: 32rpx;
  width: 100%;
  display: block;
  color: #999;
}
.scroll-item-box {
  height: 92rpx;
  line-height: 92rpx;
  font-size: 30rpx;
  color: #333333;
  display: flex;
  position: relative;
  justify-content: space-between;
  align-items: center;
  font-weight: 200;
}
.scroll-item-text {
  font-size: 30rpx;
  color: #333333;
}
.scroll-item-box::after {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 0px;
  content: '';
  border-bottom: 1rpx solid #eaeaea;
  transform: scaleY(0.8); /*缩放*/
}
.scroll-icon {
  width: 80rpx;
  text-align: right;
}
.scroll-icon-img {
  width: 30rpx;
  height: 30rpx;
}
