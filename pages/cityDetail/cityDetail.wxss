/* pages/cityDetail/cityDetail.wxss */
.list {
  padding: 0 32rpx 32rpx;
}
.banner {
  margin: 30rpx 32rpx;
  height: 400rpx;
}
.banner-box {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  border: 2rpx solid #eef0f2;
  box-shadow: 0px 4rpx 8rpx rgba(0, 0, 0, 0.04);
  background: #fff;
}
.banner-box image {
  width: 100%;
  height: 320rpx;
  display: block;
  border-radius: 16rpx;
}
.head {
  font-size: 26rpx;
  color: #111111;
  height: 80rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-weight: 300;
}
.head-right {
  color: #999;
}
.item {
  background: #fff;
  border-radius: 16rpx;
  border: 2rpx solid #eef0f2;
  box-shadow: 0px 4rpx 8rpx rgba(0, 0, 0, 0.04);
  padding: 30rpx;
  margin-bottom: 30rpx;
}
.item-content {
  font-size: 30rpx;
  line-height: 1.2;
  font-weight: 300;
}
